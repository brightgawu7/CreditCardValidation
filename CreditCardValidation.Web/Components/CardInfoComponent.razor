


<div class="group w-[95%] tablet:w-[80%] h-[210px] mx-auto rounded-[10px] relative top-[110px] mt-[-100px] z-10 shadow-2xl">

	@code {

		string borderStyle = "hidden";
	
	}
	@if (BorderIndex == 1)
	{
		borderStyle = "right-[50%] w-[90%] h-10 top-[50%] translate-y-[-50%] translate-x-[50%] ";
	}
	else if (BorderIndex == 2)
	{

		borderStyle = "right-[35%]  w-[60%] h-12 bottom-[5%] ";
	}
	else if (BorderIndex == 3)
	{
		borderStyle = "right-[12%] w-[20%] h-12 bottom-[5%]";
	}
	else
	{
		borderStyle = "hidden";
	}

	<div class="relative h-full w-full transition-all duration-500 [transform-style:preserve-3d] @(RotateCard ? "[transform:rotateY(180deg)]": null ) ">
		<div class="absolute inset-0   w-full h-full  rounded-[10px]  bg-[url('/images/background.jpg')]  bg-no-repeat bg-cover bg-center p-[1rem]">


			<div class=@($"absolute border rounded-md duration-600 transition-all {borderStyle}")></div>

			<div class="w-full flex justify-between">
				<img src="/images/sticker.png" alt="scan" class="w-[60px] max-h-[40px]" />
				@if (CreditCardInfo.CardType == "Visa")
				{

					<img src="/images/visa.png" alt="scan" class="w-[60px] h-[40px] animate-fade-in-up " />
				}
				else if (CreditCardInfo.CardType == "MasterCard")
				{

					<img src="/images/mastercard.png" alt="scan" class="w-[60px] h-[40px] animate-fade-in-up" />
				}
				else if (CreditCardInfo.CardType == "Discover")
				{

					<img src="/images/discover.png" alt="scan" class="w-[80px] h-[25px] animate-fade-in-up" />
				}
				else
				{

				}
			</div>

			<div class="w-[90%] mx-auto my-[30px] mx-auto flex justify-between text-[1.6rem] tracking-[0.1rem]  text-white-primary font-sans font-medium">
				<span>
					@for (int i = 0; i < 4; i++)
					{
						<span class="animate-fade-in-up">

							@CardBumber[i]
						</span>
					}
				</span>
				<span>
					@for (int i = 4; i < 8; i++)
					{
						<span class="animate-fade-in-up">

							@CardBumber[i]
						</span>
					}
				</span>
				<span>
					@for (int i = 8; i < 12; i++)
					{
						<span class="animate-fade-in-up">

							@CardBumber[i]
						</span>
					}
				</span>
				<span>
					@for (int i = 12; i < 16; i++)
					{
						<span class="animate-fade-in-up">

							@CardBumber[i]
						</span>
					}
				</span>
			</div>

			<div class="w-[90%] mx-auto flex justify-between font-sans">
				<div class="w-[70%] overflow-hidden">
					<p class="text-[0.7rem] text-gray-100/80 font-medium tracking-[0.05rem]">Card Holder</p>
					<p class="text-white-primary font-medium text-[0.9rem] tracking-[0.05rem] h-[20px] animate-fade-in-up ">@(CreditCardInfo.CardName?.ToUpper() ?? "HOLDER NAME")</p>
				</div>
				<div class="w-[25%]">
					<p class="text-[0.7rem] text-gray-100/80 font-medium tracking-[0.05rem]">Expires</p>
					<p class="text-white-primary font-medium text-[0.95rem] tracking-[0.05rem] animate-fade-in-up"> @(CreditCardInfo.ExpiryMonth ?? "MM")/@(CreditCardInfo.ExpiryYear ?? "YY") </p>
				</div>
			</div>

		</div>


		<div class="absolute    w-full h-full   rounded-[10px]  bg-[url('/images/background.jpg')]  bg-no-repeat bg-cover bg-center py-[1rem]   [transform:rotateY(180deg)] [backface-visibility:hidden]">
			<div class="w-full h-[40px] bg-black-primary/80"></div>

			<div class="w-[90%] mx-auto text-right text-[0.8rem] mt-[1rem] ">
				<p class="text-white-primary font-medium">CVV</p>
				<p class="w-full bg-white-primary px-[0.4em] py-[0.6em] font-sans font-medium tracking-[0.2em] rounded-md h-[35px]">@CreditCardInfo.CardCVV</p>
				<div class="w-full mt-[1rem] flex flex-row  justify-end  ">
					@if (CreditCardInfo.CardType == "Visa")
					{

						<img src="/images/visa.png" alt="scan" class="w-[40px] h-[20px]" />
					}
					else if (CreditCardInfo.CardType == "MasterCard")
					{

						<img src="/images/mastercard.png" alt="scan" class="w-[40px] h-[20px]" />
					}
					else if (CreditCardInfo.CardType == "Discover")
					{

						<img src="/images/discover.png" alt="scan" class="block w-[80px] h-[25px]" />
					}
					else
					{

					}


				</div>
			</div>


		</div>


	</div>

</div>


